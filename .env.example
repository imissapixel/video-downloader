# Environment Configuration for Video Downloader
# Copy this file to .env and update the values

# Flask Environment (development or production)
FLASK_ENV=development

# Security
SECRET_KEY=your-super-secret-key-change-this-to-something-random

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=true

# File Upload Limits (in bytes)
MAX_CONTENT_LENGTH=16777216

# Download Settings
DOWNLOADS_DIR=static/downloads
CLEANUP_INTERVAL=3600
FILE_RETENTION_HOURS=1

# Logging
LOG_LEVEL=INFO
LOG_FILE=video_downloader.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# CORS Origins (comma-separated)
CORS_ORIGINS=chrome-extension://*,moz-extension://*,https://dl.xtend3d.com